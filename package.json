{
  "name": "community-aave-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "db:mem": "node local-mongo",
    "db:mem:persist": "DB_PATH=database node local-mongo",
    "codegen:watch": "graphql-codegen --config graphql-codegen.yml --watch",
    "codegen": "graphql-codegen --config graphql-codegen.yml && SKIP_LOAD=true hardhat compile",
    "release": "standard-version"
  },
  "dependencies": {
    "@aave/protocol-js": "^2.3.0",
    "@chakra-ui/react": "^1.1.6",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "bignumber.js": "^9.0.1",
    "dayjs": "^1.9.6",
    "dokz": "^2.0.4",
    "ethers": "^5.0.26",
    "framer-motion": "^3.2.2-rc.1",
    "graphql": "^15.4.0",
    "graphql-request": "^3.3.0",
    "lodash": "^4.17.20",
    "mini-graphiql": "^1.0.4",
    "mini-graphql": "^1.0.0",
    "mongodb": "^3.6.3",
    "next": "10.0.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "swr": "^0.3.9"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript": "^1.20.0",
    "@graphql-codegen/typescript-graphql-request": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/mongodb": "^3.6.1",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "hardhat": "^2.0.8",
    "hardhat-typechain": "^0.3.4",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mongodb-memory-server": "^6.9.2",
    "prettier": "2.2.1",
    "standard-version": "^9.1.0",
    "ts-generator": "^0.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.2"
  },
  "config": {
    "mongodbMemoryServer": {
      "debug": "0"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
